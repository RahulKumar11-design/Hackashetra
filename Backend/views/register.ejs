<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>User Registration | Health Portal</title>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
  <link rel="stylesheet" href="reg.css">
</head>

<body>
  <div class="container">
    <div class="header">
      <h2>User Registration</h2>
      <p>Create your health portal account</p>
    </div>
    <form action="/api/auth/register" method="POST" id="registration-form">
      <div class="form-container">
        <!-- Personal Information -->
        <h3 class="form-title"><i class="fas fa-user"></i> Personal Information</h3>
        <div class="form-group">
          <label for="name">Full Name <span style="color: var(--error-color)">*</span></label>
          <input type="text" id="name" name="name" required>
        </div>
        <div class="form-row">
          <div class="form-col">
            <label for="email">Email Address <span style="color: var(--error-color)">*</span></label>
            <input type="email" id="email" name="email" required>
          </div>
          <div class="form-col">
            <label for="phone">Phone Number <span style="color: var(--error-color)">*</span></label>
            <input type="tel" id="phone" name="phoneNumber" required>
          </div>
        </div>
        <div class="form-group">
          <label for="password">Password <span style="color: var(--error-color)">*</span></label>
          <div class="password-field">
            <input type="password" id="password" name="password" required>
            <i class="fas fa-eye password-toggle" id="password-toggle"></i>
          </div>
        </div>
        <div class="form-row">
          <div class="form-col">
            <label for="dob">Date of Birth</label>
            <input type="date" id="dob" name="dateOfBirth">
          </div>
          <div class="form-col">
            <label for="gender">Gender</label>
            <select id="gender" name="gender">
              <option value="">Select</option>
              <option value="male">Male</option>
              <option value="female">Female</option>
              <option value="other">Other</option>
              <option value="prefer-not-to-say">Prefer not to say</option>
            </select>
          </div>
        </div>

        <!-- Health Information -->
        <h3 class="form-title"><i class="fas fa-heartbeat"></i> Health Information</h3>
        <div class="form-group">
          <label for="blood-group">Blood Group</label>
          <select id="blood-group" name="bloodGroup">
            <option value="">Select</option>
            <option value="A+">A+</option>
            <option value="A-">A-</option>
            <option value="B+">B+</option>
            <option value="B-">B-</option>
            <option value="O+">O+</option>
            <option value="O-">O-</option>
            <option value="AB+">AB+</option>
            <option value="AB-">AB-</option>
          </select>
        </div>
        <div class="form-group">
          <label for="allergies">Allergies (comma separated)</label>
          <input type="text" id="allergies" name="allergies" placeholder="e.g., Peanuts, Penicillin, Dust">
        </div>
        <div class="form-group">
          <label for="chronic-conditions">Chronic Conditions (comma separated)</label>
          <input type="text" id="chronic-conditions" name="chronicConditions"
            placeholder="e.g., Asthma, Diabetes, Hypertension">
        </div>
        <div class="form-group">
          <label for="medical-history">Additional Medical Information</label>
          <textarea id="medical-history" name="medicalHistory"
            placeholder="Provide any additional relevant medical details"></textarea>
        </div>

        <!-- Address Information -->
        <h3 class="form-title"><i class="fas fa-map-marker-alt"></i> Address Information</h3>
        <div class="form-group">
          <label for="street">Street Address</label>
          <input type="text" id="street" name="address[street]">
        </div>
        <div class="form-row">
          <div class="form-col">
            <label for="city">City</label>
            <input type="text" id="city" name="address[city]">
          </div>
          <div class="form-col">
            <label for="state">State/Province</label>
            <input type="text" id="state" name="address[state]">
          </div>
        </div>
        <div class="form-row">
          <div class="form-col">
            <label for="postal-code">Postal Code</label>
            <input type="text" id="postal-code" name="address[postalCode]">
          </div>
          <div class="form-col">
            <label for="country">Country</label>
            <input type="text" id="country" name="address[country]">
          </div>
        </div>

        <!-- Submit Button -->
        <div class="button-group">
          <button type="submit" id="btn-submit">Register <i class="fas fa-check"></i></button>
        </div>
      </div>
    </form>
    <div class="form-footer">
      Already have an account? <a href="/login">login In</a>
    </div>
  </div>
</body>

</html>